generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SessionStatus {
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

model Session {
  id          String        @id @default(cuid())
  tableId     String
  customerId  String?
  staffId     String
  startTime   DateTime      @default(now())
  endTime     DateTime?
  status      SessionStatus @default(ACTIVE)
  hourlyRate  Int           @default(50000)
  totalAmount Int           @default(0)
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("sessions")
}
